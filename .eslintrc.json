{
  "env": {
    "node": true,
    "browser": true,
    "jest": true
  },
  "plugins": [
    "import"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "ecmaFeatures": {
      "classes": true,
      "legacyDecorators": true
    },
    "sourceType": "module"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  "extends": ["eslint:recommended", "airbnb"],
  "rules": {
    "no-underscore-dangle": [
      "error",
      {
        "allow": [
          "_id"
        ]
      }
    ],
    "class-methods-use-this": "off",
    "consistent-return": "off",
    "func-names": "off",
    "global-require": "off",
    "import/prefer-default-export": "off",
    "max-classes-per-file": "warn",
    "max-len": [
      "error",
      {
        "code": 120
      }
    ],
    "no-param-reassign": "off",
    "no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "next|transaction"
      }
    ],
    "object-curly-newline": [
      "error",
      {
        "consistent": true
      }
    ],
    "guard-for-in": "off",
    "no-restricted-syntax": "off"
  }
}
